package com.t2s.config;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.context.annotation.Configuration;

import com.t2s.entities.Client;
import com.t2s.entities.Container;
import com.t2s.entities.Movement;
import com.t2s.entities.Ship;
import com.t2s.enums.CategoryContainer;
import com.t2s.enums.Handling;
import com.t2s.enums.StatusContainer;
import com.t2s.enums.TypeContainer;
import com.t2s.repositories.ClientRepository;
import com.t2s.repositories.ContainerRepository;
import com.t2s.repositories.MovimentRepository;
import com.t2s.repositories.ShipRepository;

@Configuration
public class TestConfig implements CommandLineRunner{

	@Autowired
	private ClientRepository clientRepository;
	
	@Autowired
	private ShipRepository shipRepository;
	
	@Autowired
	private MovimentRepository movimentRepository;
	
	@Autowired
	private ContainerRepository containerRepository;
	
	@Override
	public void run(String... args) throws Exception {
		
		
		Client client = new Client("Santos Brasil");
		clientRepository.save(client);
		Client client2 = new Client("Uzuminas");
		clientRepository.save(client2);
		Client client3 = new Client("Coca Cola");
		clientRepository.save(client3);
		Client client4 = new Client("Pepsi");
		clientRepository.save(client4);
		
		
		
		
		
		Ship ship = new Ship("TITANIC");
		shipRepository.save(ship);
		
		Container container = new Container(client,"124521542",TypeContainer.T20,StatusContainer.FULL,CategoryContainer.IMPORT);
		containerRepository.save(container);
		Container container2 = new Container(client2,"dfsfsdfdfdsf",TypeContainer.T40,StatusContainer.EMPTY,CategoryContainer.IMPORT);
		containerRepository.save(container2);
		Container container3 = new Container(client,"sdfsfsdfdsf",TypeContainer.T20,StatusContainer.EMPTY,CategoryContainer.EXPORT);
		containerRepository.save(container3);
		Container container4 = new Container(client3,"sdfsdffsd",TypeContainer.T40,StatusContainer.FULL,CategoryContainer.EXPORT);
		containerRepository.save(container4);
		
		
		Movement movement = new Movement(container,ship,Handling.DISCHARGE);
		movimentRepository.save(movement);
		Movement movement2 = new Movement(container2,ship,Handling.STACK);
		movimentRepository.save(movement2);
		Movement movement3 = new Movement(container3,ship,Handling.WEIGHING);
		movimentRepository.save(movement3);
		
		System.out.println("teste");
		
		
	}

}
